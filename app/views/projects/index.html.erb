<p id="notice"><%= notice %></p>

<h1 style="text-align:center;">My projects</h1>
<% if current_user.admin? %>
  <td><%= link_to 'Project', new_project_path, class:'btn btn-warning' %></td>
  <% end %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Skill</th>
      <!-- <th>Description</th>
      <th>Date</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%=  project.skill %></td>
        <!-- <td><%=  project.description %></td>
        <td><%= project.created_at.to_date %></td> -->

        <td><%= link_to 'project-description', project, class:'btn btn-success' %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_project_path(project),class:'btn btn-info' %></td>
        <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' },  class:'btn btn-danger'%></td>
        <% end %>
      </tr>
    <%end%>
  </tbody>
</table>
