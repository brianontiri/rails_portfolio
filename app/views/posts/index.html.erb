<p id="notice"><%= notice %></p>

<h1>My Blog</h1>     <td><%= link_to 'Post', new_post_path, class:'btn btn-warning' %></td>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.to_date %></td>

        <td><%= link_to 'Show', post, class:'btn btn-success',  remote: true %></td>

          <td><%= link_to 'Edit', edit_post_path(post),class:'btn btn-info',  remote: true %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' },  class:'btn btn-danger',  remote: true %></td>

      </tr>
    <%end%>
  </tbody>
</table>
