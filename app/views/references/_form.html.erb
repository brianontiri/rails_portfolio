<%= form_for Reference.new do |form| %>


  <div class="field form-group">
    <div class="field">
    <%= form.label :Name  %>
    <%= form.text_field :name, id: :reference_name , class:'form-control'%>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :reference_location,  class:'form-control' %>
  </div>

  <div class="field">
    <%= form.label :contact %>
    <%= form.text_area :contact, id: :reference_contact, class:'form-control' %>
  </div><br>

  <div class="actions form-group">
    <%= form.submit 'refer me' ,class:'btn btn-success' %>
  </div>
</div>
<% end %>
